---
import ProjectCard from '@components/ProjectCard.astro'
import Node from '@assets/icons/node.astro';
import Express from '@assets/icons/express.astro';
import Javascript from '@assets/icons/javascript.astro';
import React from '@assets/icons/react.astro';
import Mongodb from '@assets/icons/mongodb.astro';
import Redis from '@assets/icons/redis.astro';
---

<section class="my-20">
  <h2 class="text-2xl font-semibold mb-2">Projects</h2>
  <hr class="mb-6 border-zinc-600">

  <ProjectCard 
    projectTitle="Production-Grade Blog API" 
    projectDescription="A RESTful API with JWT authentication, Redis-powered rate limiting, and MongoDB full-text search. Features comprehensive Swagger documentation and Docker deployment."
    projectLink="https://github.com/benotsman-youssuf/Blog-API">
    <Node />
    <Express />
    <Javascript />
    <Mongodb />
    <Redis />
  </ProjectCard>

  <ProjectCard 
    projectTitle="Scalable Chunked File Uploader" 
    projectDescription="Developed a resumable upload system supporting files up to +50GB through 1MB chunk processing with Node.js streams and automatic cleanup."
    projectLink="https://github.com/benotsman-youssuf/chunked-uploader">
    <!-- No icons -->
  </ProjectCard>

  <ProjectCard 
    projectTitle="AI-Powered Learning Platform" 
    projectDescription="A Django-based platform integrating Gemini AI for personalized learning, featuring multilingual support and optimized ORM models."
    projectLink="https://github.com/benotsman-youssuf/pfe">
    <!-- No icons -->
  </ProjectCard>
</section>
